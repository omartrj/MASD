# === PROJECT ===
PROJECT_NAME=MASD
VERSION=1.0.0
AUTHOR="Omar Criacci"
EMAIL=omar.criacci@student.unipg.it
GITHUB_REPO=https://github.com/omartrj/MASD

# === KAFKA ===
KAFKA_BOOTSTRAP_SERVERS=kafka1:9092,kafka2:9093,kafka3:9094
KAFKA_NUM_PARTITIONS=3  # Numero di partizioni per topic (max: 3 broker disponibili)
KAFKA_DEFAULT_REPLICATION_FACTOR=3  # Repliche per partizione (max: 3 broker, min: 1)
KAFKA_MIN_INSYNC_REPLICAS=2  # Minimo repliche sincronizzate per conferma scrittura (max: 3, consigliato: 2)
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=3  # Repliche per topic degli offset (max: 3)
KAFKA_TOPIC_PREFIX=sensors.raw  # Prefisso per i topic dei sensori

# === HADOOP ===
HADOOP_HOME=/opt/hadoop

# === SPARK ===
SPARK_AGGREGATE_TRIGGER_INTERVAL="1 minute"  # Frequenza aggregazione
SPARK_AGGREGATE_WINDOW="1 minute"  # Finestra temporale aggregazione
SPARK_AGGREGATE_SLIDE="1 minute"  # Slide della finestra (uguale alla finestra per finestre non sovrapposte)
SPARK_AGGREGATE_WATERMARK="5 seconds"  # Tolleranza dati in ritardo
SPARK_AGGREGATE_CHECKPOINT_DIR=/tmp/spark-checkpoints/aggregates

# === MONGODB ===
MONGO_URI=mongodb://mongodb-primary:27017,mongodb-secondary1:27017,mongodb-secondary2:27017/?replicaSet=rs0
MONGO_DATABASE=masd_sensors
MONGO_WRITE_CONCERN=majority  # Opzioni: 1, 2, 3, majority (=2), all (=3)
MONGO_READ_PREFERENCE=primaryPreferred  # Opzioni: primary, primaryPreferred, secondary, secondaryPreferred, nearest