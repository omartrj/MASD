# === KAFKA ===
KAFKA_BOOTSTRAP_SERVERS=kafka1:9092,kafka2:9093,kafka3:9094
KAFKA_NUM_PARTITIONS=3  # Number of partitions per topic (max: 3 available brokers)
KAFKA_DEFAULT_REPLICATION_FACTOR=3  # Replicas per partition (max: 3 brokers, min: 1)
KAFKA_MIN_INSYNC_REPLICAS=2  # Minimum in-sync replicas for write acknowledgement (max: 3, recommended: 2)
KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=3  # Replicas for offsets topic (max: 3)
KAFKA_TOPIC_PREFIX=sensors.raw  # Prefix for sensor topics

# === HADOOP ===
HADOOP_HOME=/opt/hadoop # Do not modify or everything breaks

# === SPARK ===
SPARK_AGGREGATE_TRIGGER_INTERVAL="1 minute"  # Aggregation frequency
SPARK_AGGREGATE_WINDOW="1 minute"  # Aggregation time window
SPARK_AGGREGATE_SLIDE="1 minute"  # Window slide (equal to window for non-overlapping windows)
SPARK_AGGREGATE_WATERMARK="5 seconds"  # Late data tolerance
SPARK_AGGREGATE_CHECKPOINT_DIR=/tmp/spark-checkpoints/aggregates

# === MONGODB ===
MONGO_URI=mongodb://mongodb-primary:27017,mongodb-secondary1:27017,mongodb-secondary2:27017/?replicaSet=rs0
MONGO_DATABASE=masd_sensors
MONGO_WRITE_CONCERN=majority  # Options: 1, 2, 3, majority (=2), all (=3)
MONGO_READ_PREFERENCE=primaryPreferred  # Options: primary, primaryPreferred, secondary, secondaryPreferred, nearest